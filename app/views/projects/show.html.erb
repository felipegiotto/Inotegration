<h1 class="<%= @project.situation_verbose %>"><%=h @project.nome %></h1>

<pre><%=h @project.description %></pre>

<p>
  <b>Situação:</b>
  <%= @project.situation_verbose %>
</p>

<p>
  <b>Pasta:</b>
  <%=h @project.folder_name %>
</p>

<p>
  <b>Repositório:</b>
  <%= @project.repository_type %>
</p>

<p>
  <b>Dados do último commit:</b>
  <pre><%= @project.last_commit_data %></pre>
</p>

<%= link_to 'Alterar', edit_project_path(@project) %> |
<%= link_to 'Analisar', analisar_project_path(@project), :method => :post %> |
<%= link_to 'Voltar', projects_path %>

<h2>Últimas Análises</h2>

<% @project.analyses.each do |analysis| %>

	<div id="analysis_<%= analysis.id %>">
	<h3 class="<%= analysis.situation_verbose %>"><%= link_to_remote analysis.created_at, :url => show_analysis_project_path(@project, :analysis_id => analysis.id) %></h3>
	</div>

<% end %>
